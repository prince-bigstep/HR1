<% layout('layouts/boilerplate') %>
<div class="container d-flex justify-content-center align-items-center mt-5">
    <div class="row"> 
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow">
                <img src="https://images.unsplash.com/photo-1517817748493-49ec54a32465?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1350&q=80"
                    alt="" class="card-img-top" />
                <div class="card-body">
                    <h5 class="card-title">Edit</h5>
                    <form action="/<%= user._id %>?_method=PUT" method="POST" class="validated-form" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="username">Username</label>
                            <input class="form-control" type="text" id="username" value="<%= user.username %>" name="employee[username]" autofocus required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="email">Email</label>
                            <input class="form-control" type="email" id="email" name="employee[email]" value="<%= user.email %>" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="input-group mb-3">
                            <label class="input-group-text" for="designation">Designation</label>
                            <select class="form-select" id="designation" name="employee[designation]" required>
                                <!-- <option selected>Choose...</option> -->
                                <% if(user.designation =='Admin') {%>
                                <option value="Admin" selected>Admin</option>
                                <option value="Employee">Employee</option>
                                <% }else{%>
                                <option value="Admin">Admin</option>
                                <option value="Employee" selected>Employee</option>
                                <% } %>  
                            </select>
                        </div>
                        <div class="input-group mb-3">
                            <label class="input-group-text" for="manager">Manager</label>
                            <select class="form-select" id="manager" name="employee[manager]" required>
                                <% for (let employee of employees){%>
                                <% if(user.manager.equals(employee._id)) {%>
                                <option value="<%=employee._id%>" selected><%=employee.username%></option>
                                <% } else{%>
                                <option value="<%=employee._id%>"><%=employee.username%></option>
                                <% }} %> 
                            </select>
                        </div>
                        <button class="btn btn-success btn-block">Update</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
